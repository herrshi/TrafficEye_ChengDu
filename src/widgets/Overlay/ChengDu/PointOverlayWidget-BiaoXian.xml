<!-- 标线 -->
<?xml version="1.0" ?>
<configuration>
	<type>BiaoXian</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onBiaoXianOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onBiaoXianOverlayClose</widgetclosenotify>
	
	<popup>
		<title>{lkldmc}</title>
		
		<fields>
			<field name="lkldmc" />
			<field name="lkldfl" alias="路口路段分类：" visible="true" />
			<field name="szqy" alias="所在区域：" visible="true" />
			<field name="ssfj" alias="所属分局：" visible="true" />
			<field name="ddmc" alias="所属大队：" visible="true"/>
			<field name="lkfs" alias="路口方式：" visible="true" />
		</fields>
		
		<showzoomtobutton>false</showzoomtobutton>
		
		<buttons>
			<button label="查看详细" action="openDevice" type="BiaoXian"/>
		</buttons>
	</popup>
	
	<simplerenderer field="type">
    	<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoXian.png" />
	</simplerenderer>
</configuration>
