<!-- 故障设备 -->
<?xml version="1.0" ?>
<configuration>
	<type>GuZhangSheBei</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onGuZhangSheBeiOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onGuZhangSheBeiOverlayClose</widgetclosenotify>
	
	<popup>
		<title>{lkldmc}</title>
		
		<fields>
			<field name="lkldmc" />
			<field name="szqy" alias="所在区域" visible="true" />
			<field name="ssfj" alias="所属分局" visible="true" />
			<field name="ddmc" alias="所属大队" visible="true"/>
			<field name="type" alias="设备分类" visible="true" />
			<field name="gzfl" alias="故障分类" visible="true" />
			<field name="zt" alias="故障状态" visible="true" />
		</fields>
		
		<showzoomtobutton>false</showzoomtobutton>
		
		<buttons>
			<button label="查看详细" action="openDevice" type="GuZhangSheBei"/>
		</buttons>
	</popup>
	
	<uniquevaluerenderer field="type">
    	<picturemarkersymbol url="assets/police/police.png" yoffset="13"/>
    	
		<uniquevalueinfo value="信号设备">
			<picturemarkersymbol url="assets/images/mapIcons/标志标线/信号设备_故障.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="标志设备">
			<picturemarkersymbol url="assets/images/mapIcons/标志标线/标志_故障.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="标线设备">
			<picturemarkersymbol url="assets/images/mapIcons/标志标线/标线_故障.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="其他设备">
			<picturemarkersymbol url="assets/images/mapIcons/标志标线/其他设备设备_故障.png" yoffset="13"/>
		</uniquevalueinfo>
	</uniquevaluerenderer>
</configuration>
