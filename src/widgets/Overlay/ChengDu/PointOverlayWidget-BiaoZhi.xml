<!-- 标志 -->
<?xml version="1.0" ?>
<configuration>
	<type>BiaoZhi</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onBiaoZhiOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onBiaoZhiOverlayClose</widgetclosenotify>
	
	<popup>
		<title>{lkldmc}</title>
		
		<fields>
			<field name="lkldmc" />
			<field name="azwz" alias="安装位置" visible="true" />
			<field name="bzlx" alias="标志类型" visible="true" />
			<field name="szqy" alias="所在区域" visible="true"/>
			<field name="ssfj" alias="所属分局" visible="true" />
			<field name="ddmc" alias="所属大队" visible="true" />
		</fields>
		
		<showzoomtobutton>false</showzoomtobutton>
		
		<buttons>
			<button label="查看详细" action="openDevice" type="BiaoZhi"/>
		</buttons>
	</popup>
	
	<uniquevaluerenderer field="bzlx">
    	<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/SheBei.png" yoffset="13"/>
    	
		<uniquevalueinfo value="警告标志">
			<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoZhi_JingGao.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="指标标志">
			<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoZhi_ZhiBiao.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="组合标志">
			<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoZhi_ZuHe.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="禁令标志">
			<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoZhi_JingLing.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="旅游标志">
			<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoZhi_LvYou.png" yoffset="13"/>
		</uniquevalueinfo>
		
		<uniquevalueinfo value="其他标志">
			<picturemarkersymbol url="assets/images/mapIcons/BiaoZhiBiaoXian/BiaoZhi_QiTa.png" yoffset="13"/>
		</uniquevalueinfo>
	</uniquevaluerenderer>
</configuration>
