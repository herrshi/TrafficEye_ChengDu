<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
	<s:Rect width="100%" height="100%" radiusX="2" radiusY="2">  
		<s:fill>  
			<s:SolidColor alpha="0.6"
						  alpha.down="1"
						  color="{getStyle('contentBackgroundColor')}"
						  color.down="{getStyle('selectionColor')}"
						  color.over="{getStyle('rollOverColor')}"/>
		</s:fill> 
		<s:stroke>  
			<s:SolidColorStroke color="0x000000" />  
		</s:stroke>
	</s:Rect>  
	
	<s:Label text="{hostComponent.label}"
			 fontFamily="{getStyle('fontFamily')}"
			 fontSize="{getStyle('fontSize')}"
			 alpha="{getStyle('contentBackgroundAlpha')}"
			 alpha.down="1"
			 color="{getStyle('colorNavi')}"
			 color.down="{getStyle('focusColor')}"
			 color.over="{getStyle('focusColor')}"
			 horizontalCenter="0" verticalCenter="0"/>
</s:Skin>
