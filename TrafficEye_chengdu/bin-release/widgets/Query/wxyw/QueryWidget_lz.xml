<?xml version="1.0" ?>
<configuration>
	<relatewidgets>立柱信号灯数量</relatewidgets>
    <layer>http://[serverip]/arcgis/rest/services/wx_yw/MapServer/2</layer>
    <titlefield>SDE.JT_XHDLZ_PT.CROSSNAME</titlefield>
    <idfield>SDE.JT_XHDLZ_PT.DEVICEID</idfield>
    <linkfield></linkfield>
    <fields all="false">
        <field name="SDE.JT_XHDLZ_PT.TYPE" alias="设备类型"/>
    	<field name="SDE.JT_XHDLZ_PT.DEVICEID" alias="设备编号"/>
    	<field name="SDE.JT_XHDLZ_PT.CROSSNAME"/>
    	<field name="DEV_STATUS" show="false"/>
    </fields>
    <filterfield>
        <name></name>
        <alias></alias>
    </filterfield>
    <refreshrate></refreshrate>
    <query>1=1</query>
    <info>widgets/InfoTemplates/InfoPopupWidget.swf</info>
    <keyfield>DEV_STATUS</keyfield>
    <symbols useinranksymbolwidget="true" >    	
    	<symbol keyvalue="0" alias="正常">
    		<picturemarkersymbol url="assets/images/wxyw/lzxhd20_0.png" height="20" width="20"/>
    	</symbol>
    	<symbol keyvalue="1" alias="普通报警">
    		<picturemarkersymbol url="assets/images/wxyw/lzxhd20_1.png" height="20" width="20"/>
    	</symbol>
    	<symbol keyvalue="2" alias="警告报警">
    		<picturemarkersymbol url="assets/images/wxyw/lzxhd20_2.png" height="20" width="20"/>
    	</symbol>
    	<symbol keyvalue="3" alias="严重报警">
    		<picturemarkersymbol url="assets/images/wxyw/lzxhd20_3.png" height="20" width="20"/>
    	</symbol>
    	<symbol keyvalue="4" alias="致命报警">
    		<picturemarkersymbol url="assets/images/wxyw/lzxhd20_4.png" height="20" width="20"/>
    	</symbol>
    	<symbol keyvalue="default" alias="未监控">
    		<picturemarkersymbol url="assets/images/wxyw/lzxhd20_default.png" height="20" width="20" />
    	</symbol>	
    </symbols>
    <eventType flag="reportDevice"/>
</configuration>
