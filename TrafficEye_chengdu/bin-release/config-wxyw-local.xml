<?xml version="1.0" ?>
<configuration>
    <title>ArcGIS Viewer for Flex</title>
    <subtitle>... using ArcGIS</subtitle>
    <logo>assets/images/logo.png</logo>
    <!--textColor,backgroundColor,rolloverColor,selectionColor,titleColor,applicationBackgroundColor-->
    <stylecolors>0x444444,0xdae7f5,0xdae7f5,0xa2bad5,0x444444</stylecolors> <!-- Sky Blue -->
    <stylealpha>0.8</stylealpha>

    <!-- UI elements -->
    <widget left="10"  top="10"    config="widgets/Navigation/NavigationWidget.xml" url="widgets/Navigation/NavigationWidget.swf"/>
    <widget right="-2" bottom="-2" config="widgets/OverviewMap/OverviewMapWidget.xml" url="widgets/OverviewMap/OverviewMapWidget.swf"/>
    <!--widget right="20" top="55"    config="widgets/MapSwitcher/MapSwitcherWidget.xml" url="widgets/MapSwitcher/MapSwitcherWidget.swf"/>
    <widget left="0" top="0" config="widgets/HeaderController/HeaderControllerWidget.xml" url="widgets/HeaderController/HeaderControllerWidget.swf"/-->
    <!--widget left="3" bottom="3" config="widgets/Coordinate/CoordinateWidget.xml" url="widgets/Coordinate/CoordinateWidget.swf"/-->
	
	<!--gis服务器地址-->
    <map initialextent="120.1464 31.5002 120.4338 31.6398" top="0" serverip="128.64.151.12:8399">
        <basemaps>
            <layer label="基础图层" type="tiled" visible="true"  alpha="1"
                        url="http://[serverip]/arcgis/rest/services/wuxi/wx_base_PGIS_yw/MapServer"/>
        </basemaps>
        <operationallayers>
        	<layer label="设备图层" type="dynamic" visible="true" alpha="1"
        				url="http://[serverip]/arcgis/rest/services/wuxi/wx_yw/MapServer" />
        	<layer label="发布段" type="dynamic" visible="true" alpha="1"
        				url="http://[serverip]/arcgis/rest/services/wuxi/wx_fbd_pgis_ksl/MapServer" />
        	<layer label="注记" type="dynamic" visible="true" alpha="1"
        				url="http://[serverip]/arcgis/rest/services/wuxi/wx_anno_PGIS_93/MapServer" />
        </operationallayers>
    </map>

    <!-- widgets organized into widget containers that manage close/open etc -->
    <!-- supported layout property options: horizontal(default)|float|vertical|fix-->
    <widgetcontainer layout="vertical">
    	<widget label="功能"
        	preload="open"
            url="widgets/LayerControl/LayerControlWidget.swf"
            config="widgets/LayerControl/LayerControlWidget_wxyw.xml"/> 
    </widgetcontainer>
    
    <widgetcontainer layout="float">
		<widget label="兴趣点搜索" right="20" bottom="20"
			url="widgets/PoiSearch/PoiSearchWidget.swf"
			config="widgets/PoiSearch/PoiSearchWidget.xml" 
			icon="assets/images/i_search_s.png" />

		<widget label="信号机" 
			config="widgets/Query/wxyw/QueryWidget_xhj_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
    	<widget label="地面摄像机" 
			config="widgets/Query/wxyw/QueryWidget_sxj_dm_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="高架摄像机" 
			config="widgets/Query/wxyw/QueryWidget_sxj_gj_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="高架电子警察" 
			config="widgets/Query/wxyw/QueryWidget_dzjc_gj_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="地面电子警察" 
			config="widgets/Query/wxyw/QueryWidget_dzjc_dm_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="高架卡口" 
			config="widgets/Query/wxyw/QueryWidget_cp_gj_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="地面卡口" 
			config="widgets/Query/wxyw/QueryWidget_cp_dm_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="高架车检器" 
			config="widgets/Query/wxyw/QueryWidget_vd_gj_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="挑臂箭头信号灯" 
			config="widgets/Query/wxyw/QueryWidget_tbjt_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="立柱信号灯" 
			config="widgets/Query/wxyw/QueryWidget_lz_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="挑臂信号灯" 
			config="widgets/Query/wxyw/QueryWidget_tb_local.xml"
			url="widgets/Query/QueryWidget.swf"/>
			
		<widget label="行人信号灯" 
			config="widgets/Query/wxyw/QueryWidget_xr_local.xml"
			url="widgets/Query/QueryWidget.swf"/>		    
    </widgetcontainer>
    
    <widgetcontainer layout="horizontal">
    	<widget label="信号机数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="地面摄像机数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="高架摄像机数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="高架电子警察数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="地面电子警察数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="高架卡口数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="地面卡口数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="高架车检器数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="挑臂箭头信号灯数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="立柱信号灯数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="挑臂信号灯数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
            
		<widget label="行人信号灯数量"
            url="widgets/RankSymbolLegend/RankSymbolLegendWidget.swf"/> 
	</widgetcontainer>
</configuration>

