<?xml version="1.0" ?>
<configuration>
	<title>ArcGIS Viewer for Flex</title>
	<subtitle>... using ArcGIS</subtitle>
	<logo>assets/images/logo.png</logo>
	<!--textColor,backgroundColor,rolloverColor,selectionColor,titleColor,applicationBackgroundColor -->
	<stylecolors>0x444444,0xdae7f5,0xdae7f5,0xa2bad5,0x444444,0x000000
	</stylecolors> <!-- Sky Blue -->
	<applicationbackgroudalpha>0</applicationbackgroudalpha>
	<stylealpha>0.8</stylealpha>
	<showerror>true</showerror>

	<!-- UI elements -->
	<widget left="10" top="10" config="widgets/Navigation/NavigationWidget.xml"
		url="widgets/Navigation/NavigationWidget.swf" />
	<widget right="-2" bottom="-2"
		config="widgets/OverviewMap/OverviewMapWidget.xml" url="widgets/OverviewMap/OverviewMapWidget.swf" />
	<!-- <widget right="20" top="55" config="widgets/MapSwitcher/MapSwitcherWidget.xml" 
		url="widgets/MapSwitcher/MapSwitcherWidget.swf"/> -->
	<!-- <widget left="0" top="0" config="widgets/HeaderController/HeaderControllerWidget.xml" 
		url="widgets/HeaderController/HeaderControllerWidget.swf"/> -->
	<widget left="3" bottom="3"
		config="widgets/Coordinate/CoordinateWidget.xml" url="widgets/Coordinate/CoordinateWidget.swf" />

	<!--gis服务器地址 -->
	<map initialextent="87.50 43.768 87.655 43.880" top="0"
		serverip="192.168.1.101:8399">
		<basemaps>
			<layer label="基础图层" type="tiled" visible="true" alpha="1"
				url="http://[serverip]/arcgis/rest/services/wlmq/wlmq_base/MapServer" />
		</basemaps>
		<operationallayers>

			<layer label="发布段" type="dynamic" visible="true" alpha="1"
				url="http://[serverip]/arcgis/rest/services/wlmq/wlmq_fbd/MapServer" />



		</operationallayers>
	</map>

	<!-- widgets organized into widget containers that manage close/open etc -->
	<!-- supported layout property options: horizontal(default)|float|vertical|fix -->

	<widgetcontainer layout="float">
		<widget label="overlay" preload="open"
			url="widgets/Overlay/OverlayWidget.swf" config="widgets/Overlay/OverlayWidget_local.xml" />

		<widget label="视频监控" config="widgets/Query/wlmq/QueryWidget_sxj.xml"
			url="widgets/Query/QueryWidget.swf" />

		<widget label="诱导板" config="widgets/Query/wlmq/QueryWidget_ydb_local.xml"
			url="widgets/Query/QueryWidget.swf" />

		<widget label="信号机" config="widgets/Query/wlmq/QueryWidget_xhj.xml"
			url="widgets/Query/QueryWidget.swf" />

		<widget label="微波车检器" config="widgets/Query/wlmq/QueryWidget_xhd.xml"
			url="widgets/Query/QueryWidget.swf" />

		<widget label="发布段程序" config="widgets/Query/wlmq/QueryWidget_fbd_local.xml"
			url="widgets/Query/QueryWidget.swf" />
		<widget label="交通管制" preload="" config="widgets/Draw/DrawWidget.xml"
			url="widgets/Draw/DrawWidget.swf" />
	</widgetcontainer>

	<widgetcontainer layout="vertical">
		<widget label="功能" preload="open"
			config="widgets/LayerControl/LayerControlWidget_wlmq.xml" url="widgets/LayerControl/LayerControlWidget.swf" />
		<widget label="占道施工"
			url="widgets/ConstructionPoint/ConstructionPointWidget.swf" config="widgets/ConstructionPoint/ConstructionPointWidget.xml" />
		<widget label="地图搜索" config="widgets/MapSearch/MapSearchWidget.xml"
			url="widgets/MapSearch/MapSearchWidget.swf" />
	</widgetcontainer>
	<remoteobjects endpoint="http://127.0.0.1:9081/cditms/messagebroker/amf">
	</remoteobjects>
</configuration>

