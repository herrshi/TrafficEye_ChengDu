<configuration>
	<showgraphicsearch>true</showgraphicsearch>
	<showtextsearch>false</showtextsearch>
	<sendresult>false</sendresult>
	
	<layerinfo>
		<url>http://[serverip]/arcgis/rest/services/cd_search/MapServer</url>
		<layerids>0,1,2,3,4,5</layerids>
		<fields>Name</fields>

		<uniquevaluerenderer field="layerName">
			<picturemarkersymbol url="assets/images/i_pushpin_centered.png" />
			
			<uniquevalueinfo value="诱导板">
				<picturemarkersymbol url="assets/images/device/qbb.png"/>
			</uniquevalueinfo>
			
			<uniquevalueinfo value="匝控">
				<picturemarkersymbol url="assets/images/device/zk-open-20-20.png"/>
			</uniquevalueinfo>
			
			<uniquevalueinfo value="电子警察">
				<picturemarkersymbol url="assets/images/device/dzjc_gj20_0.png"/>
			</uniquevalueinfo>
			
			<uniquevalueinfo value="事件检测">
				<picturemarkersymbol url="assets/images/device/sjjc-30.png"/>
			</uniquevalueinfo>
			
			<uniquevalueinfo value="视频监控">
				<picturemarkersymbol url="assets/images/device/camera.png"/>
			</uniquevalueinfo>
			
			<uniquevalueinfo value="视频采集">
				<picturemarkersymbol url="assets/images/device/camera.png"/>
			</uniquevalueinfo>
			
			<uniquevalueinfo value="主要道路">
				<simplelinesymbol color="0x3E6FBC" width="2" />
			</uniquevalueinfo>
			
			<uniquevalueinfo value="次要道路">
				<simplelinesymbol color="0x3E6FBC" width="2" />
			</uniquevalueinfo>
		</uniquevaluerenderer>

		<popups>
			<popup layername="default">
				<title>{DES}</title>
				<fields>
					<field name="DES" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="诱导板">
				<title>{name}</title>
				<fields>
					<field name="name" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="匝控">
				<title>{desc_}</title>
				<fields>
					<field name="name" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="电子警察">
				<title>{name}</title>
				<fields>
					<field name="name" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="事件检测">
				<title>{name}</title>
				<fields>
					<field name="name" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="视频监控">
				<title>{name}</title>
				<fields>
					<field name="name" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="视频采集">
				<title>{name}</title>
				<fields>
					<field name="name" />
				</fields>
				<showzoomtobutton>false</showzoomtobutton>
			</popup>
			
			<popup layername="PoliceOverlay">
				<title>{deptName}{teamName}-{policeName}</title>
		
				<fields>
					<field name="deptName" alias="所属分局" visible="true" />
					<field name="teamName" alias="所属大队" visible="true" />
					<field name="postName" alias="岗点" visible="true" />
					<field name="timePeriod" alias="时间段" visible="true" />
					<field name="policeName" alias="执勤警员" visible="true" />
					<field name="policeGpsCode" alias="手台号" visible="true" />
					<field name="status" alias="在岗状态" visible="true" />			
				</fields>
		
				<showzoomtobutton>false</showzoomtobutton>
		
				<buttons>
					<button label="轨迹跟踪" action="openDevice" type="policeTrace" idfield="policeGpsCode" />
					<button label="刷新" action="openDevice" type="policeRefesh" idfield="policeGpsCode" />
				</buttons>
			</popup>
		</popups>
	</layerinfo>
	
	<!-- 要搜索的动态数据 -->
	<overlays>
		<overlay name="PoliceOverlay" label="警员" titlefield="policeName" idfield="policeGpsCode" defaultselected="true"/>
	</overlays>
</configuration>