<?xml version="1.0" ?>
<configuration>
	<type>police</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onPoliceOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onPoliceOverlayClose</widgetclosenotify>
	<popup>
		<title>{policeName}</title>
		<fields>
			<field name="duty" alias="职务" visible="true"/>	
			<field name="policeCode" alias="警号" visible="true"/>
			<field name="policeGpsCode" alias="手台号" visible="true"/>
			<field name="policeName" visible="false"/>
			<field name="deptName" alias="所属单位" visible="true"/>
			<field name="deptCode" alias="单位编号" visible="false"/>
			<field name="deptGpsCode" alias="单位手台号" visible="false"/>
			<field name="teamName" alias="所属部门" visible="true"/>
			<field name="teamCode" alias="部门编号" visible="false"/>
			<field name="teamGpsCode" alias="部门手台号" visible="false"/>
			<field name="status" alias="当前状态" visible="true"/>
			<field name="postName" alias="岗点" visible="true"/>
			<field name="timePeriod" alias="时间段" visible="true"/>
			<field name="teamCode" alias="部门编号" visible="false"/>			
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
		<buttons>
			<button label="呼叫" action="openDevice" type="sendMessage" idfield="policeId" />
			<button label="短信" action="openDevice" type="callPda" idfield="pdaCode" />
			<button label="刷新" action="openDevice" type="callInterphone" idfield="interphoneCode" />
		</buttons>
	</popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingCha-blue.png" yoffset="13" />
	</simplerenderer>
</configuration>
